extends ../application.pug
block content
  .jumbotron.jumbotron-fluid
    .container
      .row
        .col-md-8.offset-xs-2
          table.cz-challenge-table
            thead
              tr
                td(colspan="2")
                  h1(class="display-1")= '€' + dataStructure.pot
                tr
                  td(colspan="2")
                    h1(class="display-4")= dataStructure.name
                tr
                  td
                    h1= dataStructure.user.name
                  td
                    h1= dataStructure.participant.name
                tr
                  td
                    h2= dataStructure.userTask.name
                  td
                    h2= dataStructure.participantTask.name
            tbody
              each checker in dataStructure.userCheckers
                tr
                  div
                    if checker.checked
                      td(class="cz-challenge-table-checked"): h1(class="display-4") x
                    else if checker.current
                      td(class="cz-challenge-table-today")
                        form(action="/checkers" id="checkerForm" method="POST")
                          input(type="hidden" name="UserId" value=dataStructure.user.id)
                          input(type="hidden" name="TaskId" value=dataStructure.userTask.id)
                          button(type="submit" class='ghost-btn')
                            h1(class="display-4") x
                    else
                      td(class="cz-challenge-table-unchecked"): h1(class="display-4") x
                  div
                    if checker.checked
                      td(class="cz-challenge-table-checked"): h1(class="display-4") x
                    else
                      td(class="cz-challenge-table-unchecked"): h1(class="display-4") x
            tfooter
              tr
                td(colspan="2")
                  h1(class="display-1") GOAL!






